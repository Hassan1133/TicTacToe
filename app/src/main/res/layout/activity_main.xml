<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:ignore="ScrollViewSize">

        <TextView
            android:id="@+id/main_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:text="@string/tic_tac_toe"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_text"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="3"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/r1c1btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:onClick="btnCheck"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/r1c2btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:onClick="btnCheck"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/r1c3btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:onClick="btnCheck"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/r2c1btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:onClick="btnCheck"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/r2c2btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:onClick="btnCheck"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/r2c3btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:onClick="btnCheck"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/r3c1btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:onClick="btnCheck"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/r3c2btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:onClick="btnCheck"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/r3c3btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:onClick="btnCheck"
                app:cornerRadius="5dp" />

        </GridLayout>

    </RelativeLayout>

</ScrollView>